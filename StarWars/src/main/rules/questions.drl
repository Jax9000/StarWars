rule "czy_robot"
	salience $order	
	when
		Ranking(ruleId == 10, $order: order)
		not(exists Fact(type == "zywa_istota", value == "Tak"))
		not(exists Fact(type == "czlowiek", value == "Tak"))
		not(exists Fact(type == "poruszanie", value == "Suwa sie"))
    then
		Fact fact = Question.Ask("robot");
		insert(fact);
		
		if(fact.CompareValueWith("Tak"))
		{
			insert(new Fact("czlowiek", "Nie"));
			insert(new Fact("zywa_istota", "Nie"));
		}
end;

